{
	"extends": "eslint:recommended",
	"env": {
		"browser": true
	},
	"root": true,
	"globals": {
		"skuid": false,
		"arguments": false
	},
	"parserOptions": {  
		"ecmaVersion": 7
	},
	"plugins": [
		"json"
	],
	"rules": {
		"no-console": "off",
		"no-unused-vars": "off",
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"no-inner-declarations": [
			"error"
		],
		"no-useless-escape": 0,
		"rest-spread-spacing": 0,
		"semi": [
			"error",
			"always"
		],
		"no-eval": [
			"error"    
		], 
		"no-new-func": [
			"error"
		]
	}
}